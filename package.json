{
  "name": "cbooster-client-payments",
  "version": "1.0.0",
  "private": true,
  "description": "Credit Booster client payments dashboard with Render + Supabase storage",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test:backend": "node --test tests/*.test.js",
    "build": "npm --prefix webapp run build",
    "lint": "npm --prefix webapp run lint",
    "quality:gate": "npm --prefix webapp run lint -- --max-warnings=0 && npm --prefix webapp run test && npm --prefix webapp run build",
    "auth:hash-users-json": "node scripts/hash-web-auth-users-json.js",
    "records:v2:backfill": "node scripts/backfill-client-records-v2.js",
    "records:v2:verify": "node scripts/verify-client-records-v2.js",
    "postinstall": "npm --prefix webapp install && npm --prefix webapp run build",
    "webapp:dev": "npm --prefix webapp run dev",
    "webapp:build": "npm --prefix webapp run build",
    "webapp:lint": "npm --prefix webapp run lint"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "pg": "^8.13.3",
    "playwright": "^1.58.2"
  }
}
