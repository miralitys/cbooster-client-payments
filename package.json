{
  "name": "cbooster-client-payments",
  "version": "1.0.0",
  "private": true,
  "description": "Credit Booster client payments dashboard with Render + Supabase storage",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test:backend": "node --test tests/*.test.js",
    "test:mini:backend": "node --test tests/mini-*.test.js",
    "test:mini:backend:coverage": "c8 --all --exclude='**/node_modules/**' --include='**/tests/mini-*.test.js' --check-coverage --lines=95 --functions=99 --branches=78 --statements=95 --reporter=text-summary --reporter=lcov node --test tests/mini-*.test.js",
    "test:mini:frontend": "npm --prefix webapp run test -- src/features/mini-form",
    "test:mini:frontend:coverage": "c8 --all --exclude='**/node_modules/**' --include=mini.js --check-coverage --lines=60 --functions=80 --branches=50 --statements=60 --reporter=text-summary --reporter=lcov node webapp/scripts/mini-coverage-smoke.mjs",
    "build": "npm --prefix webapp run build",
    "lint": "npm --prefix webapp run lint",
    "quality:gate": "npm --prefix webapp run lint -- --max-warnings=0 && npm --prefix webapp run test && npm --prefix webapp run build",
    "auth:hash-users-json": "node scripts/hash-web-auth-users-json.js",
    "records:v2:backfill": "node scripts/backfill-client-records-v2.js",
    "records:v2:verify": "node scripts/verify-client-records-v2.js",
    "postinstall": "npm --prefix webapp install && npm --prefix webapp run build",
    "webapp:dev": "npm --prefix webapp run dev",
    "webapp:build": "npm --prefix webapp run build",
    "webapp:lint": "npm --prefix webapp run lint"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "pg": "^8.13.3",
    "playwright": "^1.58.2"
  },
  "devDependencies": {
    "c8": "^10.1.3"
  }
}
